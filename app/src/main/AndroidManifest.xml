<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team03.coursewarehub" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Search.SearchListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Search.SearchDisplayActivity"
            android:label="@string/title_activity_search_second" />
        <activity android:name=".Youtube.VideoDisplay" />
        <activity android:name=".Youtube.VideoListActivity" />
        <activity android:name=".Example.ExampleListActivity" />
        <activity android:name=".Assignments.AssignmentListActivity" />
        <activity
            android:name=".Handouts.HandoutListActivity"
            android:label="@string/title_activity_handout_list" />
        <activity
            android:name=".Assignments.AssignmentView"
            android:label="@string/title_activity_assignment_view"
            android:parentActivityName=".Assignments.AssignmentListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team03.coursewarehub.Assignments.AssignmentListActivity" />
        </activity>
        <activity
            android:name=".Example.ExampleView"
            android:label="@string/title_activity_example_view" />
        <activity
            android:name=".UploadUrl.UploadActivity"
            android:label="@string/title_activity_upload" />
        <activity
            android:name=".Comments.CommentActivity"
            android:label="@string/title_activity_comment" >
        </activity>
    </application>

</manifest>
